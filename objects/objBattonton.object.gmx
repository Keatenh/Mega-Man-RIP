if !global.frozen &amp;&amp; !dead /*&amp;&amp; !global.flashStopper*/
{
    switch(action)
    {
        case 1: //wait to start moving
            xspeed = 0;
            yspeed = 0;
            
            if image_index &gt; 0 or actiontimer &gt; 0 or instance_exists(prtPlayer)
            {
                actiontimer += 1;
            }
            if image_index == 0
            {
                if actiontimer == 128
                {
                    image_index += 1;
                    actiontimer = 0;
                }
            }
            else
            {
                if actiontimer == 6
                {
                    image_index += 1;
                    actiontimer = 0;
                }
            }
            //battonton has flipped
            if image_index == 3 {action = 2; y+=3;}
            break;
        case 2: //move toward player
            if actiontimer == 0
            {   
                //yspeed = 0;
                //move_towards_point(prtPlayer.x,prtPlayer.y+8,0.5);
                var _speed,_dir;
                _speed = 0.5;
                _dir = point_direction(x,y,prtPlayer.x,prtPlayer.y+8);
                xspeed  = _speed*cos(degtorad(_dir));
                yspeed = _speed*-sin(degtorad(_dir));
                
            }
            actiontimer += 1;
            if actiontimer &gt; 128
            {
                actiontimer = 0;
            }
            if place_meeting(x,y,prtPlayer)
            {
                if !prtPlayer.canHit 
                {
                    action = 3;
                    actiontimer = 0;
                    xspeed = 0;
                    yspeed = 0;
                }
            }
            break;
        case 3: //move away upwards
            yspeed = -2;
            if !place_meeting(x,y,objSolid)
            {
                generalCollision();
            }
            if yspeed = 0
            {
                image_index = 2;
                action = 4;
            }
            break;
        case 4: //reverse of action 1?
            actiontimer += 1;
            if actiontimer == 6
            {
                image_index -= 1;
                actiontimer = 0;
                if image_index == 0 {action = 1; actiontimer = 64;}
            }
            break;
    }
    
    //invulnerablility////////////
    if floor(image_index) == 0
        reflectProjectiles = true;
    else
        reflectProjectiles = false;
    /////////////////////////////
    
        
    if action = 2 or action = 3
    {
        animTimer += 1;
        if animTimer == 6
        {
            animTimer = 0;
            image_index += 1;
            if image_index = 7
            {
                image_index = 3;
            }
        }
    }
}
else if dead
{
    action = 1;
    actiontimer = 0;
    image_index = 0;
    animTimer = 0;
}
